extends layout

block content 
    div.wrapper
        div.sidebar
        div.mainbar
          if locals.authenticated
            div.askBox
                a.qType Recent Questions
                form(action='/questions/ask' method="get")
                    button.ask Ask a Question
            if questions
                each question in questions 
                    div.questionBox
                        div.info
                            a Posted by:
                            a #{question.User.userName}
                        div.qCont
                            a(href=`/questions/${question.id}`) #{question.title}
          else
            p Please Sign in/Sign up.
        div.sidebar

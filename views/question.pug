extends layout.pug

block content
    h1 #{question.title}
    h3 #{question.content}
    h6 asked at: #{(question.updatedAt).toString().split(' ').slice(0,5).join(' ')}
    h5 posted by: #{question.User.userName}
    div 
        if locals.authenticated
            if question.userId === locals.user.id 
                form(action=`/questions/${question.id}/edit` method='get')
                    button Edit 
    div
        if answers 
            each answer in answers 
                div 
                    p #{answer.content}
        else 
            p Be the first one to answer this question!
        if locals.authenticated
            form(action='/answers' method='post')
                input(type='hidden' name='_csrf' value=csrfToken)
                input(type='hidden' name='userId' value=locals.user.id)
                label(for='content') Answer:
                textarea(name='content')
        
        

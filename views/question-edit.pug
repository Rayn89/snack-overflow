extends layout.pug 

block content
    form(action=`/questions/${question.id}/edit` method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
        label(for='title') Question:
        input(type='text' name='title' value=question.title)
        label(for='content') Description:
        textarea(type='text' name='content') #{question.content}
        button Edit